<AnchorPane fx:id="frame" prefHeight="424.0" prefWidth="619.0" styleClass="formulario1" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.syshealthfx.RegistroController">
   <children>
      <VBox prefHeight="424.0" prefWidth="619.0">
         <children>
            <HBox alignment="CENTER" prefHeight="46.0" prefWidth="600.0" style="-fx-border-color: transparent transparent #cacaca transparent; -fx-border-width: 2px; -fx-background-color: #003FF6;">
               <children>
                  <Label style="-fx-font-weight: bold;" styleClass="titulo" text="REGISTRAR USUARIO" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <GridPane hgap="10.0" prefHeight="193.0" prefWidth="600.0" style="-fx-padding: 10px;" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="NOMBRE(S)" />
                        <TextField fx:id="txtNombre" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
                     <children>
                        <Label text="APELLIDO MATERNO" />
                        <TextField fx:id="txtApellidoA" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
                     <children>
                        <Label text="APELLIDO PATERNO" />
                        <TextField fx:id="txtApellidoP" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" GridPane.rowIndex="1">
                     <children>
                        <Label id="rbntGenero" text="GENERO" />
                        <HBox id="rbtnGenero" prefHeight="100.0" prefWidth="200.0" spacing="12.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Label text="FECHA DE NACIMIENTO" />
                        <DatePicker promptText="DD/MM/YYYY" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <children>
                        <Label text="CORREO ELECTRONICO" />
                        <TextField />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
                     <children>
                        <Label text="TELEFONO" />
                        <TextField />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Label text="DEPARTAMENTO" />
                        <ComboBox prefHeight="25.0" prefWidth="168.0" promptText="MEDICINA GENERAL" />
                     </children>
                  </VBox>
               </children>
            </GridPane>
            <VBox alignment="CENTER" prefHeight="143.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="600.0" spacing="10.0">
                     <children>
                        <Label text="NOMBRE DE USUARIO: " />
                        <TextField fx:id="txtUsuario" />
                        <Button fx:id="generarUsuario" mnemonicParsing="false" onAction="#generarUsuario" text="GENERAR USUARIO" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="600.0" spacing="10.0">
                     <children>
                        <Label text="CONTRASEÑA:" />
                        <TextField fx:id="txtPassword" />
                        <Button fx:id="generarPassword" mnemonicParsing="false" onAction="#generarPass" text="GENERAR CONTRASEÑA" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="33.0" prefWidth="600.0" spacing="10.0">
                     <children>
                        <Label text="SELECCIONAR ROL: " />
                        <HBox id="rbtnRol" prefHeight="29.0" prefWidth="341.0" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="63.0" prefWidth="600.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" text="CREAR USUARIO" />
                  <Button fx:id="vaciar" mnemonicParsing="false" onAction="#vaciarFormulario" text="VACIAR" />
                  <Button mnemonicParsing="false" onAction="#cerrarVentana" text="CANCELAR" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
